@using Faker.Model
@inherits BaseFieldComponent

@if (Field != null)
{

    <MatIconButton Icon="remove" OnClick="RemoveField"></MatIconButton>

               @if (ImageDataUriField != null)
               {
                   <MatTextField @bind-Value="@ImageDataUriField.Width" Label="Width"></MatTextField>
                   <MatTextField @bind-Value="@ImageDataUriField.Height" Label="Height"></MatTextField>
                   <MatCheckbox @bind-Value="@ImageDataUriField.GrayScale" Label="Grascale"></MatCheckbox>
        <MatCheckbox @bind-Value="@ImageDataUriField.Blur" Label="Blur"></MatCheckbox>
               }
   
}
@code{

    private ImagePicsumUrlField? ImageDataUriField => Field?.Field as ImagePicsumUrlField;

}