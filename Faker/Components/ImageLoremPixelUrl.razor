@using Faker.Model
@inherits BaseFieldComponent

@if (Field != null)
{

    <MatButton Raised="true"
           Style="margin: 2px"
           OnClick="RemoveField" TrailingIcon="remove">@Field.Name</MatButton>


    @if (ImageDataUriField != null)
    {
        <MatTextField @bind-Value="@ImageDataUriField.Width" Label="Width"></MatTextField>
        <MatTextField @bind-Value="@ImageDataUriField.Height" Label="Height"></MatTextField>

        <MatSelect Label="Pick a Food Group" @bind-Value="@ImageDataUriField.Category">
            @foreach (var item in ImageDataUriField.CategoryOptions)
            {
                
                <MatOptionString Value="@item">@item</MatOptionString>
            }
        </MatSelect>


        <MatCheckbox @bind-Value="@ImageDataUriField.Randomize" Label="Randomize"></MatCheckbox>
        <MatCheckbox @bind-Value="@ImageDataUriField.Https" Label="Https"></MatCheckbox>
       
    }
}

@code {

    private ImageLoremPixelUrlField? ImageDataUriField => Field?.Field as ImageLoremPixelUrlField;

}