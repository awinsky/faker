@using Faker.Model
@inherits BaseFieldComponent

@if (Field != null)
{
    <FieldControl Field="Field" RemoveRequested="RemoveField"></FieldControl>
    if (CardinalDirectionField != null)
    {
        <MatCheckbox @bind-Value="@CardinalDirectionField.UseAbbreviation" Label="Use Abbreviation"></MatCheckbox>
    }
}


@code {

    private CardinalDirectionField? CardinalDirectionField => Field?.Field as CardinalDirectionField;

}