@using Faker.Model
@using Bogus.DataSets
@using System.Linq
@inherits BaseFieldComponent

@if (Field != null)
{
    <FieldControl Field="Field" RemoveRequested="RemoveField"></FieldControl>

    if (FirstNameField != null)
    {
        <MatRadioGroup GroupName="gender" @bind-Value="FirstNameField.Gender" TValue="Name.Gender?">
            <MatRadioButton Value="@(null)" TValue="Name.Gender?">Default</MatRadioButton>
            <MatRadioButton Value="@(Name.Gender.Female)" Label="Female" TValue="Name.Gender?"></MatRadioButton>
            <MatRadioButton Value="@(Name.Gender.Male)" TValue="Name.Gender?">Male</MatRadioButton>
      </MatRadioGroup>
    }
}
@code {


    private FirstNameField? FirstNameField => Field?.Field as FirstNameField;

}