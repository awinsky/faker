@using Faker.Model
@inherits BaseFieldComponent

@if (Field != null)
{

    <MatIconButton Icon="remove" OnClick="RemoveField"></MatIconButton>

    @if (StreetAddressField != null)
    {

        <MatCheckbox @bind-Value="@StreetAddressField.UseFullAddress" Label="Use Full Address"></MatCheckbox>
    }
   
}

@code{

    private StreetAddressField? StreetAddressField => Field?.Field as StreetAddressField;

}