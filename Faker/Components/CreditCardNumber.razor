@using Faker.Model
@inherits BaseFieldComponent

@if (Field != null)
{
    <FieldControl Field="Field" RemoveRequested="RemoveField"></FieldControl>
    @if (CreditCardNumberField != null)
    {
        <MatSelect Label="Card type" @bind-Value="@CreditCardNumberField.Type">
            @foreach (var item in CreditCardNumberField.Options)
            {
                <MatOptionString Value="@item">@item</MatOptionString>
            }
        </MatSelect>
    }
}
@code{

    private CreditCardNumberField? CreditCardNumberField => Field?.Field as CreditCardNumberField;

}