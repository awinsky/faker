@using Faker.Model
@inherits BaseFieldComponent


@if (Field != null)
{
    <FieldControl Field="Field" RemoveRequested="RemoveField"></FieldControl>

    @if (PasswordField != null)
    {
        <MatNumericUpDownField Label="Decimals" TValue="int"
                               @bind-Value=PasswordField.Length
                               Step="1"
                               Minimum="1" Maximum="10000"></MatNumericUpDownField>
        <MatCheckbox @bind-Value="@PasswordField.Memorable" Label="Memorable"></MatCheckbox>

        <MatTextField @bind-Value="@PasswordField.RegexPattern" Label="Regex Pattern"></MatTextField>
        <MatTextField @bind-Value="@PasswordField.Prefix" Label="Prefix"></MatTextField>
    }
}
@code{

    private PasswordField? PasswordField => Field?.Field as PasswordField;

}