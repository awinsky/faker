@using Faker.Model
@inherits BaseFieldComponent

@if (Field != null)
{

    <MatButton Raised="true"
           Style="margin: 2px"
           OnClick="RemoveField" TrailingIcon="remove">@Field.Name</MatButton>

    @if (LongitudeField != null)
   {
       <MatNumericUpDownField Label="Min"
                       @bind-Value=LongitudeField.Min
                              Step="0.01"
                              DecimalPlaces=2 Minimum="-180" Maximum="180">
       </MatNumericUpDownField>
       <MatNumericUpDownField Label="Max"
                       @bind-Value=LongitudeField.Max
                              Step="0.01"
                              DecimalPlaces=2 Minimum="-180" Maximum="180">
       </MatNumericUpDownField>
   }

}
@code{

    private LongitudeField? LongitudeField => Field?.Field as LongitudeField;


}