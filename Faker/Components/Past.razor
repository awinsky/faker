@using Faker.Model
@inherits BaseFieldComponent
@if (Field != null)
{
    <FieldControl Field="Field" RemoveRequested="RemoveField"></FieldControl>
    @if (PastField != null)
    {
        <MatNumericUpDownField Label="Years to go back" TValue="int"
                               @bind-Value=PastField.YearsToGoBack
                               Step="1"
                               Minimum="1" Maximum="2000">

        </MatNumericUpDownField>
        <MatDatePicker @bind-Value="PastField.RefDate" Label="Ref date"></MatDatePicker>
    }
}

@code {

    private PastField? PastField => Field?.Field as PastField;


}