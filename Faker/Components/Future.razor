@using Faker.Model
@inherits BaseFieldComponent
@if (Field != null)
{
    <FieldControl Field="Field" RemoveRequested="RemoveField"></FieldControl>
    @if (FutureField != null)
    {
                <MatNumericUpDownField Label="Years To Go Forward" TValue="int"
                       @bind-Value=FutureField.YearsToGoForward
                               Step="1"
                               Minimum="1" Maximum="2000">

                </MatNumericUpDownField>
        <MatDatePicker @bind-Value="FutureField.RefDate" Label="Ref date"></MatDatePicker>
    }
}

@code {

    private FutureField? FutureField => Field?.Field as FutureField;


}