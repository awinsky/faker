@using Faker.Model
@inherits BaseFieldComponent

@if (Field != null)
{
    <FieldControl Field="Field" RemoveRequested="RemoveField"></FieldControl>

    if (OrdinalDirectionField != null)
    {
        <MatCheckbox @bind-Value="@OrdinalDirectionField.UseAbbreviation" Label="Use Abbreviation"></MatCheckbox>
    }
}


@code {

    private OrdinalDirectionField? OrdinalDirectionField => Field?.Field as OrdinalDirectionField;

}