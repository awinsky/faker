@using Faker.Model
@using Bogus.DataSets
@using System.Linq
@inherits BaseFieldComponent

@if (Field != null)
{
    <MatIconButton Icon="remove" OnClick="RemoveField"></MatIconButton>

    if (FullNameField != null)
    {
        <MatRadioGroup GroupName="gender" @bind-Value="FullNameField.Gender" TValue="Name.Gender?">
            <MatRadioButton Value="@(null)" TValue="Name.Gender?">Default</MatRadioButton>
            <MatRadioButton Value="@(Name.Gender.Female)" Label="Female" TValue="Name.Gender?"></MatRadioButton>
            <MatRadioButton Value="@(Name.Gender.Male)" TValue="Name.Gender?">Male</MatRadioButton>
      </MatRadioGroup>
    }
}
@code {


    private FullNameField? FullNameField => Field?.Field as FullNameField;

}